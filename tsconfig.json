{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react-native",
    "keyofStringsOnly": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES5",
    "watch": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "__tests__",
    "ios",
    "android",
    ".vscode",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
